<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#B3A580">>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:text="Search for:"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/searchHeader"
            android:layout_weight="0.21"
            android:textSize="30sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/searchBox"
            android:layout_weight="0.17"
            android:hint="Enter Here! (Seperate by a comma)"
            android:layout_marginBottom="50dp" />

        <TextView
            android:text="Category:"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/categoryHeader"
            android:layout_weight="0.19"
            android:textSize="30sp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/categorySpinner"
            android:layout_weight="0.12" />

        <TextView
            android:text="Type:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typeHeader"
            android:textSize="30sp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typeSpinner"
            android:layout_weight="0.05" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="0.12"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="312dp"
            android:layout_height="62dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:text="Search"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/activeSearchBtn"
                android:layout_weight="0.36"
                android:background="#B7C68B"
                android:onClick="toResults" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>